---
import BaseLayout from "../layouts/BaseLayout.astro";
import PhoneMockup from "../components/PhoneMockup.astro";

const apps = [
  {
    id: "rally-hud",
    title: "Rally HUD",
    description: "A clean and readable HUD for rally drivers.",
    icon: "/icons/rallyhud.png",
    screenshot: "/screens/rallyhud-1.png",
    link: "https://rallyhud.yapplic.com",
    color: "#E8F0FF"
  },
  {
    id: "like-this",
    title: "Like This",
    description: "Share and discover recommendations effortlessly.",
    icon: "/icons/likethis.svg",
    screenshot: "/screens/likethis-1.png",
    link: "https://someonelikethis.yapplic.com",
    color: "#FFF3E8"
  },
  {
    id: "pointerpointer",
    title: "PointerPointer",
    description: "A fast-paced precision and reflex game.",
    icon: "/icons/pointerpointer.png",
    screenshot: "/screens/pointerpointer-1.png",
    link: "https://pointerpointer.yapplic.com",
    color: "#E8FFF1"
  },
  {
    id: "hold-king",
    title: "Hold King",
    description: "How long can you hold the button?",
    icon: "/icons/holdking.png",
    screenshot: "/screens/holdking-1.png",
    link: "https://holdking.yapplic.com",
    color: "#FFF0F6"
  },
  {
    id: "sad-trombone",
    title: "Sad Trombone",
    description: "The classic fail sound effect, always ready.",
    icon: "/icons/sadtrombone.png",
    screenshot: "/screens/sadtrombone-1.png",
    link: "https://sadtrombone.yapplic.com",
    color: "#F3F3F3"
  }
];
---

<BaseLayout title="Yapplic - Portfolio">

  <!-- HERO -->
  <section class="hero fade-in">
    <h1 class="slide-up">Yapplic</h1>
    <p class="slide-up delay-1">
      Mobile app developer crafting simple, fast and delightful experiences.
    </p>
  </section>

  <!-- APPS FULL SECTIONS -->
  {apps.map((app, index) => (
    <section
      id={app.id}
      class={`app-section reveal ${index % 2 === 0 ? "left" : "right"}`}
      style={`background:${app.color};`}
    >
      <div class="app-text">
        <img src={app.icon} alt={app.title} class="app-icon" />
        <h2>{app.title}</h2>
        <p>{app.description}</p>
        <a href={app.link} class="cta-button" target="_blank">Learn more</a>
      </div>

      <div class="app-mockup">
        <div class="parallax-target">
          <PhoneMockup image={app.screenshot} />
        </div>
      </div>
    </section>
  ))}

</BaseLayout>
